<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fundo_recyclerview_borda"
    android:minWidth="345dp"
    android:id="@+id/linearLayout3">

    <Button
        android:id="@+id/btCancelarDialogoEditarOuRemoverEpi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/fundo_elevado"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="@+id/btRemoverDialogoEditarOuRemoverEpi"
        app:layout_constraintEnd_toStartOf="@+id/btRemoverDialogoEditarOuRemoverEpi"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btRemoverDialogoEditarOuRemoverEpi" />

    <TextView
        android:id="@+id/textNovoNomeEditarOuRemoverEpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="Novo Nome:"
        android:textColor="@color/azulEscuro"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextNovoNomeEditarOuRemoverEpi"
        app:layout_constraintEnd_toStartOf="@+id/editTextNovoNomeEditarOuRemoverEpi"
        app:layout_constraintTop_toTopOf="@+id/editTextNovoNomeEditarOuRemoverEpi" />

    <Button
        android:id="@+id/btConfirmarEditarOuRemoverEpi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/fundo_elevado"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="@+id/btRemoverDialogoEditarOuRemoverEpi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btRemoverDialogoEditarOuRemoverEpi"
        app:layout_constraintTop_toTopOf="@+id/btRemoverDialogoEditarOuRemoverEpi" />

    <TextView
        android:id="@+id/textViewTituloEditarOuRemoverEpi"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_margin="2dp"
        android:background="@drawable/fundo_titulo_activity"
        android:padding="4dp"
        android:text="Alterar EPI"
        android:textColor="@color/branco"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewDescricaoDialogoEditarOuRemoverEpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center"
        android:text="EPI que está sendo alterado"
        android:textColor="@color/azulEscuro"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloEditarOuRemoverEpi" />

    <TextView
        android:id="@+id/textViewDescricaoOutrosDialogoEditarOuRemoverEpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center"
        android:text="Especificações que estão sendo alteradas"
        android:textColor="@color/azulEscuro"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescricaoDialogoEditarOuRemoverEpi" />

    <EditText
        android:id="@+id/editTextNovoNomeEditarOuRemoverEpi"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Informe o novo nome"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/azulEscuro"
        android:textColorHighlight="@color/branco"
        android:textColorLink="@color/branco"
        android:textCursorDrawable="@color/azulEscuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editTextNovoOutrosEditarOuRemoverEpi"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescricaoOutrosDialogoEditarOuRemoverEpi" />

    <TextView
        android:id="@+id/textNovoOutrosEditarOuRemoverEpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:text="Especificações:"
        android:textColor="@color/azulEscuro"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextNovoOutrosEditarOuRemoverEpi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextNovoOutrosEditarOuRemoverEpi" />

    <EditText
        android:id="@+id/editTextNovoOutrosEditarOuRemoverEpi"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Informe novas especificações"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/azulEscuro"
        android:textColorHighlight="@color/branco"
        android:textColorLink="@color/branco"
        android:textCursorDrawable="@color/azulEscuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textNovoOutrosEditarOuRemoverEpi"
        app:layout_constraintTop_toBottomOf="@+id/editTextNovoNomeEditarOuRemoverEpi" />

    <Button
        android:id="@+id/btRemoverDialogoEditarOuRemoverEpi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/fundo_elevado"
        android:text="Remover"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btConfirmarEditarOuRemoverEpi"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btCancelarDialogoEditarOuRemoverEpi"
        app:layout_constraintTop_toBottomOf="@+id/editTextNovoOutrosEditarOuRemoverEpi" />

</androidx.constraintlayout.widget.ConstraintLayout>