<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fundo_recyclerview_borda"
    android:minWidth="345dp">

    <TextView
        android:id="@+id/textViewRelatorioItem"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_margin="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/fundo_titulo_activity"
        android:padding="4dp"
        android:text="Movimentações da Ferramenta"
        android:textColor="@color/branco"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDescricaoRelatorioItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="Informe o período para gerar o relatório"
        android:textColor="@color/azulEscuro"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRelatorioItem" />

    <TextView
        android:id="@+id/textdtInRelItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Data inicial:"
        android:textColor="@color/azulEscuro"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDataInicialRelatorioItem"
        app:layout_constraintStart_toStartOf="@+id/textViewDescricaoRelatorioItem"
        app:layout_constraintTop_toTopOf="@+id/editTextDataInicialRelatorioItem" />

    <EditText
        android:id="@+id/editTextDataInicialRelatorioItem"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Informe a data incial"
        android:inputType="date"
        android:maxLength="10"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/azulEscuro"
        android:textColorHighlight="@color/branco"
        android:textColorLink="@color/branco"
        android:textCursorDrawable="@color/azulEscuro"
        app:layout_constraintEnd_toEndOf="@+id/textViewDescricaoRelatorioItem"
        app:layout_constraintStart_toEndOf="@+id/textdtInRelItem"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescricaoRelatorioItem" />

    <TextView
        android:id="@+id/textdtFinRelItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Data final:"
        android:textColor="@color/azulEscuro"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDataFinalRelatorioItem"
        app:layout_constraintEnd_toStartOf="@+id/editTextDataFinalRelatorioItem"
        app:layout_constraintStart_toStartOf="@+id/textdtInRelItem"
        app:layout_constraintTop_toTopOf="@+id/editTextDataFinalRelatorioItem" />

    <EditText
        android:id="@+id/editTextDataFinalRelatorioItem"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Informe a data final"
        android:inputType="date"
        android:maxLength="10"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/azulEscuro"
        android:textColorHighlight="@color/branco"
        android:textColorLink="@color/branco"
        android:textCursorDrawable="@color/azulEscuro"
        app:layout_constraintEnd_toEndOf="@+id/editTextDataInicialRelatorioItem"
        app:layout_constraintStart_toStartOf="@+id/editTextDataInicialRelatorioItem"
        app:layout_constraintTop_toBottomOf="@+id/editTextDataInicialRelatorioItem" />

    <Button
        android:id="@+id/btRelatorioGerarItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/fundo_elevado"
        android:text="GERAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btCancelarDialogoRelatorioItem"
        app:layout_constraintTop_toBottomOf="@+id/editTextDataFinalRelatorioItem" />

    <Button
        android:id="@+id/btCancelarDialogoRelatorioItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/fundo_elevado"
        android:text="Sair"
        app:layout_constraintBottom_toBottomOf="@+id/btRelatorioGerarItem"
        app:layout_constraintEnd_toStartOf="@+id/btRelatorioGerarItem"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btRelatorioGerarItem" />

</androidx.constraintlayout.widget.ConstraintLayout>